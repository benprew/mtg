#! /bin/sh

APP_ROOT=/var/www/mtg/current/
PID=$APP_ROOT/tmp/pids/unicorn.pid
CMD='/usr/bin/bundle exec /usr/bin/unicorn -D -E production -c config/unicorn.rb'
old_pid="$PID.oldbin"

cd $APP_ROOT || exit 1

sig () {
test -s "$PID" && kill -$1 `cat $PID`
}

oldsig () {
test -s $old_pid && kill -$1 `cat $old_pid`
}

case $1 in
start)
        sig 0 && echo >&2 "Already running" && exit 0
        $CMD
        ;;
runningstop)
        sig QUIT && exit 0
        echo >&2 "Not running"
        ;;
force-stop)
        sig TERM && exit 0
        echo >&2 "Not running"
        ;;
stop)
        sig QUIT && exit 0
        echo >&2 "Stopped"
        ;;
restart)
        sig USR2 && exit 0
        echo >&2 "Couldn't restart, starting '$CMD' instead"
        $CMD
        ;;
reload)
        sig HUP && exit 0
        ;;
*)
        echo >&2 "Usage: $0 <start|stop|restart|force-stop>"
        exit 1
        ;;
esac
